#include<iostream>
using namespace std;
int main(){
    int arr[100][100],i,j,n,m;
    cout<< "Enter the no of rows :" << endl;
    cin >> n;
    cout<< "Enter the no of coloum :" << endl;
    cin >> m;
    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            cin >> arr[i][j];
           
        }
    }
      for(i=0;i<n;i++){
        for(j=0;j<m;j++){
           cout<< arr[i][j] << " " ;
           
        }
        cout<< endl;
    }
    for(i=0;i<n;i++){
         int sum =0;
        for(j=0;j<m;j++){
           sum = sum + arr[i][j];
           
        }
          cout<< "Sum of rows :\n"<< sum << endl;;
    }

}
