#include <stdio.h>
int main()
{
    int arr[100], n, k, i, j;
    int cout0 =0 , cout1 =0;
    printf("Enter the length of array = ");
    scanf("%d", &n);
    printf("Enter the element of array = ");
    for (i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    for (i = 0; i < n; i++)
    {
        if (arr[i] == 1)
        {
            cout1++;    
        }
         if (arr[i] == 0)
        {
            cout0++;
        }
    }
    printf(" number of 1 in array = %d", cout1);
     printf(" number of 0in array =%d", cout0);
}
